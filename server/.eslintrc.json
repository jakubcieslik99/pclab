{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "off",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "arrow-parens": ["error", "as-needed"]
  }
}
